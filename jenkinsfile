pipeline {
    agent any
    
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'sudo apt-get update'
                sh 'sudo apt-get install -y python3 python3-pip'
            }
        }

        stage('Test') {
            steps {
                sh 'python test.py'
            }
        }
        
        stage('Package') {
            steps {
                sh 'python package.py'
            }
        }
        
        stage('Build') {
            steps {
                sh 'python build.py'
            }
        }
    }
    
    post {
        always {
            echo 'This stage runs regardless of success or failure.'
        }
        
        success {
            echo 'All stages completed successfully!'
        }
        
        failure {
            echo 'Pipeline failed :('
        }
    }
}
