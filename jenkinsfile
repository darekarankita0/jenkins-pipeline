pipeline {
    agent any


    stages {
        stage('Build') {
            steps {
                sh 'pip3 install --user pipenv'
                sh '/bitnami/jenkins/home/ ./local/bin/pipenv --rm || exit 0'
                sh '/bitnami/jenkins/home/ ./local/bin/pipenv install'

            }
        }

         stage('test') {
            steps {
               echo 'test'

            }
        }



         stage('Package') {
            steps {
               echo 'package'
            }
        }
        
        stage('Deploy') {
            steps {
               echo 'deploy'
            }
        }
	
    }
}
